        <button onclick="openApp('https://www.google.com')" class="browserbtn">
          <img src="./img/google.png" style="width: 32px;"/>
        </button>
        <button onclick="openApp('https://www.bing.com')" class="browserbtn" style="margin-left: 10px;">
